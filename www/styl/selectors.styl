&
    position absolute
    top 0px
    left 0px
    height 132px
    width 100%
    background white
    background rgba(255,255,255,0.7)
    > div
        position absolute
        top 0px
        &.parties
            width 300px
            left 0px
            label
                width 80px
                text-align center
        &.agencies
            width 350px
            right 0px
            .pair
                float right
                clear both
                label
                    float right
                    width 65px
                    text-align center
                .description
                    display block
                    border-radius 50%
                    border 2px solid #1d1d1d
                    font-size 0.9em
                    margin-top 4px
                    margin-right 10px
                    padding-top 2px
                    line-height 1.2em
                    color black
                    background #eee
                    font-weight bold
                    width 20px
                    height (20px - @padding-top)
                    text-align center
                    text-decoration none
                    float right
                    &:hover
                        background-color #ccc
                        cursor pointer
                    &:active
                        background-color #888
                        cursor pointer
        .pair
            float left
            input
                display none
            label
                display block
                margin 3px
                padding 4px 6px
                cursor pointer
                background #ddd

            label:hover
                opacity 0.7

            input:checked + label
                background HNLink
                color white
                &.cssd
                    background PartyCSSD
                    color black
                &.vv
                    background PartyVV
                    color black
                &.spoz
                    background PartySPOZ
                    color black
                &.ods
                    background PartyODS
                &.top
                    background PartyTOP
                &.sz
                    background PartySZ
                &.kscm
                    background PartyKSCM
                &.kdu
                    background PartyKDU
