@import colors
@import prefixes
body
    margin 0px
    font-family arial, sans-serif
    a img
        border 0px
    #wrap
        width 650px
        .selectors
            position absolute
            top 0px
            left 0px
            height 72px
            width 100%
            background white
            > div
                float left
                clear left
            .pair
                float left
                input
                    display none
                label
                    display block
                    margin 3px
                    padding 4px 6px
                    cursor pointer
                    background #eee

                label:hover
                    opacity 0.7

                input:checked + label
                    background: HNBlue;
                    &.cssd
                        background PartyCSSD
                    &.vv
                        background PartyVV
                    &.spoz
                        background PartySPOZ
                    &.ods
                        background PartyODS
                        color white
                    &.top
                        background PartyTOP
                        color white
                    &.sz
                        background PartySZ
                        color white
                    &.kscm
                        background PartyKSCM
                        color white
                    &.kdu
                        background PartyKDU
                        color white

    svg
        margin 0px
        float left
        .drawing
            overflow hidden
        .axis
            path
                stroke #333
                stroke-width 1px
            line
                stroke #999
                stroke-width 1px
                stroke-dasharray 2, 2
                &.minor
                    stroke-dasharray 2, 15
            text
                font-size 0.8em
            &.x
                line
                    stroke-dasharray 1, 0
                    stroke #333



        .datapaths
            path
                fill none
                stroke red
                stroke-width 3px
                stroke-linecap round
                stroke-linejoin round
                &.cssd
                    stroke PartyCSSD
                &.vv
                    stroke PartyVV
                &.spoz
                    stroke PartySPOZ
                &.ods
                    stroke PartyODS
                &.top
                    stroke PartyTOP
                &.sz
                    stroke PartySZ
                &.kscm
                    stroke PartyKSCM
                &.kdu
                    stroke PartyKDU
            .symbol
                path
                    fill white
                    &:hover
                        cursor pointer
                        fill black
            path.ghost
                stroke-width 1px
                stroke #ddd
.tooltip
    max-width 800px
