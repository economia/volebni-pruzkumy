@import colors
@import prefixes
body
    margin 0px
    font-family arial, sans-serif
    a img
        border 0px
    #wrap
        width 650px
        .selectors
            > div
                float left
                clear left
            .pair
                float left
                input
                    display none
                label
                    display block
                    margin 3px
                    padding 4px 6px
                    cursor pointer
                    background #eee

                label:hover
                    opacity 0.7

                input:checked + label
                    background: HNBlue;
                    &.cssd
                        background PartyCSSD
                    &.vv
                        background PartyVV
                    &.spoz
                        background PartySPOZ
                    &.ods
                        background PartyODS
                        color white
                    &.top
                        background PartyTOP
                        color white
                    &.sz
                        background PartySZ
                        color white
                    &.kscm
                        background PartyKSCM
                        color white
                    &.kdu
                        background PartyKDU
                        color white

    svg
        .axis
            path
                stroke #333
                stroke-width 1px
            line
                stroke #999
                stroke-dasharray 2, 2
            text
                font-size 0.8em

        .datapaths
            path
                fill none
                stroke red
                stroke-width 1px
                &.cssd
                    stroke PartyCSSD
                &.vv
                    stroke PartyVV
                &.spoz
                    stroke PartySPOZ
                &.ods
                    stroke PartyODS
                &.top
                    stroke PartyTOP
                &.sz
                    stroke PartySZ
                &.kscm
                    stroke PartyKSCM
                &.kdu
                    stroke PartyKDU
                &:hover
                    stroke green
